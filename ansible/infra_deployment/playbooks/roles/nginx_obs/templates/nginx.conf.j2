user www-data;
worker_processes auto;
pid /run/nginx.pid;
include /etc/nginx/modules-enabled/*.conf;

events {
    worker_connections 768;
}

http {
    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_prefer_server_ciphers on;

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    gzip on;

    upstream obs-rancher-nodes {
{% for ip in nginx_obs_rancher_node_ips.split(',') %}
        server {{ ip }}:{{ nginx_obs_public_ingress_nodeport }};
{% endfor %}
    }

{% for domain in nginx_obs_public_domain_names.split() %}
    server {
        listen {{ nginx_obs_listen_ip }}:80;
        server_name {{ domain }};
        return 301 https://$server_name$request_uri;
    }

    server {
        listen {{ nginx_obs_listen_ip }}:443 ssl;
        server_name {{ domain }};

        ssl_certificate {{ nginx_obs_cert_path }};
        ssl_certificate_key {{ nginx_obs_key_path }};

        location / {
            proxy_pass http://obs-rancher-nodes;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_buffering off;
            proxy_http_version 1.1;
        }
    }
{% endfor %}
}
